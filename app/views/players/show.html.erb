          <div class="wrapper cheer_comment">
            <h4>응원 한마디</h4>
            <ul id="comments">
              <% @player.comments.all.each do|comment|%>
                <% user = User.find(comment.email.to_i) %>
                <li>
                  <div class="comment_user_img">
                    <% if user.img.blank? %>
                      <%= image_tag("underdog1.png") %>
                    <% else %>
                      <%= image_tag(user.img) %>
                    <% end %>
                  </div>
                  <div class="comment_text">
                    <%= user.user_name%></br>
                    <%= comment.content%>
                  </div>
                  
