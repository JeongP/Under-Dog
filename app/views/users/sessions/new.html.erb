                  <div class="field">
                    <%= f.label :email, "이메일" , class: "idnpass"%>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                  <div class="field">
                    <%= f.label :password, "비밀번호", class: "idnpass" %>
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>
                  
                  <div class="field">
                    <%= f.label :password_confirmation, "비밀번호 확인", class: "idnpass" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>
                  비밀번호 6자리 이상 입력<br><br>
                  <div class="field">
                    <%= f.label :user_name, "회원 이름" , class: "idnpass"%>
                    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_nam" %>
                  </div>
                  <div class="field">
                      <%= f.label :img, "프로필 사진", class: "idnpass" %>
                      <%= f.file_field :img, accept: 'image/png,image/gif,image/jpeg'  %>
                    </div>
                  <div class="actions">
                    <%= f.submit "회원가입하기", class:"login_button btn-lg btn-outline-warning" %>
                  </div>
                <% end %>
                <div class="back_login">로그인으로 돌아가기</div>
              </div>
          </div>
</section>
