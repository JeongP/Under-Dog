            시작하기
            <!--<%= link_to '시작하기', posts_path, class:"start_btn start_box" %>-->
          </button>
        </section>
        <section class="login_section">
          <div class="login_box">
            <div class="sign_in_form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email, "이 메 일"  , class: "idnpass"%>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                <div class="field">
                  <%= f.label :password, "비밀번호" , class: "idnpass"%>
                  <%= f.password_field :password, autocomplete: "current-password" %>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.label :remember_me, "로그인 상태로 유지하기", class: "maintain" %>
                    <%= f.check_box :remember_me, class: "maintain_ok" %>
                  </div>
                <% end -%>
                <div class="actions">
                  <%= f.submit "로그인", class:"login_button btn-lg btn-outline-warning" %>
                </div>
                <div class="member_submit">
                  <div class="member if_member">아직 회원이 아니신가요?</div>
                  <div class="member join_member">회원가입하기</div>
                </div>
              <% end %>
            </div>
              </div>
        </section>
        <section class="signup_section">
          <div class="signup_box">
            <div class="sign_up_form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
