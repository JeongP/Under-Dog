<script>
  
$('.start_box').click(function(){
    $('.start_section').fadeOut("fast", function() {
        $('.slogan_section').css('display', 'none');
        $('.login_section').fadeIn("slow").css('display', 'flex');
        $('.login_section').addClass('is_active',"slow");
    });
});

$('.join_member').click(function(){
    $('.login_section').fadeOut("fast", function() {
        $('.signup_section').fadeIn("slow").css('display', 'flex');
        $('.signup_section').addClass('is_active',"slow");
    });
});

$('.back_login').click(function(){
    $('.signup_section').fadeOut("fast", function() {
        $('.login_section').fadeIn("slow").css('display', 'flex');
        $('.login_section').addClass('is_active',"slow");
    });
});

$(function(){  // $(document).ready shorthand
  $('.logo').fadeIn('fast');
});

$(document).ready(function() {
    
    /* Every time the window is scrolled ... */
    $(window).scroll( function(){
    
        /* Check the location of each desired element */
        $('.underdog_info').each( function(i){
            
            var bottom_of_object = $(this).position().top + $(this).outerHeight();
            var bottom_of_window = $(window).scrollTop() + $(window).height();
            
            /* If the object is completely visible in the window, fade it it */
            if( bottom_of_window > bottom_of_object ){
                
                $(this).animate({'opacity':'1'},2000);
                    
            }
            
        }); 
    
    });
    
});

</script>