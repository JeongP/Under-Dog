<div class="container-fluid post_main">
  <div class="row  post_sub">
    <section class="banner_section">
      <div class="wrapper">
        <div class="slogan">자신이 보유한 코인을 자유롭게 거래할 수 있습니다.</div>
        <div class="wrap">
           <div class="search">
              <input type="text" class="searchTerm" placeholder="Who are you looking for?">
              <button type="submit" class="searchButton">
                <i class="fa fa-search"></i>
             </button>
           </div>
        </div>
      </div>
    </section>
  </div>
  
  <div class="row">
    <section class="funding_section">
      <%= link_to '게시글 올리기', new_market_path %>
    </section>
  </div>
  
  
  
  <div class="row ddd">
    <% @markets.each do |market| %>
    <% m_post = Post.find(market.post_id) %>
      <div class="col-sm-12 col-md-6 col-xl-3">
        <a href = "/markets/<%= market.id %>">  
          <div class="card h-card">
            <div class="h-img-wrapper">
              <% if !m_post.image.blank? %>
                <img class="card-img-top h-img" src="<%= m_post.image %>" alt="Card image cap">
              <% else %>
                <%= image_tag("placeholder_fest.jpeg", class: "card-img-top h-img") %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="h-card-title">임시 제목</h5>
              <!--<h5 class="h-card-title"><%#= market.name %></h5>-->
            </div>
          </div>
        </a>
      </div>
    <% end %>
    <div class="papa">
    <%= paginate @markets %>
    </div>
  </div>
</div>
